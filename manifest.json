{
  "manifest_version": 2,

  "name": "GitHub Debug Code Finder",
  "description": "Browser extension to find debug code (like console.log, print_r, die) on GitHub files/pull request",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "js": [
        "highlight.js"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  
  "permissions": [
    "<all_urls>"
  ]
}
